+		(cmd != CMD_IOCTL_GET_VIDEO_ENGINE_CONFIG) &&
+		(cmd != CMD_IOCTL_GET_VIDEO_ENGINE_DATA)) {
+		if (raw_copy_from_user(&ri, (void *) arg, sizeof(struct RvasIoctl))) {
+			dev_err(pAstRVAS->pdev, "Copy from user buffer Failed\n");
+			return -EINVAL;
+		}
