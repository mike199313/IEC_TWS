+
+		ast_video_write(ast_video, 0x10001000, AST_VIDEO_SCAL_FACTOR);
+	}
+	ast_video_write(ast_video, ctrl, AST_VIDEO_CTRL);
+
+	//capture x y
+	if ((ast_video->config->version == 5) || (ast_video->config->version == 6)) {
