+	case 1:
+		if ((ast_video->config->version == 5) || (ast_video->config->version == 6)) {
+			if (ast_video_read(ast_video, AST_VM_SEQ_CTRL) & G5_VIDEO_COMPRESS_JPEG_MODE)
+				return 1;
+			else
+				return 0;
+		} else {
+			if (ast_video_read(ast_video, AST_VM_SEQ_CTRL) & VIDEO_COMPRESS_JPEG_MODE)
+				return 1;
+			else
+				return 0;
+		}
+		break;
+	}
+	return 0;
+}
